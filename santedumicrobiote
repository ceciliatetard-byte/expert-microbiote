var currentQ = 0, totalScore = 0, selected = null;

function initQuiz() {
  currentQ = 0; totalScore = 0; selected = null;
  document.getElementById('quiz-questions').style.display = 'block';
  var r = document.getElementById('quiz-result');
  r.classList.remove('show'); r.style.display = 'none';
  renderQuestion();
}

function renderQuestion() {
  var q = questions[currentQ];
  document.getElementById('quiz-q').innerHTML = '<span>' + (currentQ + 1) + '</span>' + q.q;
  document.getElementById('progress-fill').style.width = (currentQ / questions.length * 100) + '%';
  document.getElementById('progress-text').textContent = (currentQ + 1) + ' / ' + questions.length;
  var opts = document.getElementById('quiz-opts');
  opts.innerHTML = '';
  q.opts.forEach(function(o, i) {
    var btn = document.createElement('button');
    btn.className = 'quiz-opt';
    btn.textContent = o;
    btn.onclick = function() {
      document.querySelectorAll('.quiz-opt').forEach(function(b){ b.classList.remove('selected'); });
      btn.classList.add('selected');
      selected = q.scores[i];
      document.getElementById('quiz-next').disabled = false;
    };
    opts.appendChild(btn);
  });
  var nb = document.getElementById('quiz-next');
  nb.disabled = true;
  nb.textContent = currentQ === questions.length - 1 ? 'Voir mon r√©sultat ‚Üí' : 'Suivant ‚Üí';
  document.getElementById('quiz-back').style.display = currentQ > 0 ? 'inline-block' : 'none';
  selected = null;
}

document.getElementById('quiz-next').addEventListener('click', function() {
  if (selected === null) return;
  totalScore += selected;
  currentQ++;
  if (currentQ >= questions.length) { showResult(); } else { renderQuestion(); }
});

document.getElementById('quiz-back').addEventListener('click', function() {
  if (currentQ > 0) { currentQ--; totalScore = 0; renderQuestion(); }
});

document.getElementById('quiz-restart').addEventListener('click', initQuiz);

function showResult() {
  document.getElementById('progress-fill').style.width = '100%';
  document.getElementById('progress-text').textContent = questions.length + ' / ' + questions.length;
  var pct = totalScore / (questions.length * 3);
  var r = pct < 0.2 ? results[0] : pct < 0.45 ? results[1] : pct < 0.7 ? results[2] : results[3];
  document.getElementById('result-icon').textContent = r.icon;
  document.getElementById('result-title').textContent = r.title;
  document.getElementById('result-text').textContent = r.text;
  document.getElementById('result-cards').innerHTML = r.cards.map(function(c) {
    return '<div class="result-card '+c.accent+'"><h4>'+c.title+'</h4><ul>'
      + c.items.map(function(i){ return '<li>'+i+'</li>'; }).join('') + '</ul></div>';
  }).join('');
  document.getElementById('quiz-questions').style.display = 'none';
  var res = document.getElementById('quiz-result');
  res.style.display = 'block'; res.classList.add('show');
}

initQuiz();

function showGuide(panel, btn) {
  document.querySelectorAll('.guide-panel').forEach(function(p){ p.classList.remove('active'); });
  document.querySelectorAll('.guide-tab').forEach(function(b){ b.classList.remove('active'); });
  document.getElementById('panel-' + panel).classList.add('active');
  btn.classList.add('active');
}

